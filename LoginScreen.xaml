<Window x:Class="Varasto.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Varasto"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="450" FontSize="14" Background="Black">
    <Border Background="Gray" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center" />
            <Separator></Separator>
            <Label Content="Username" Foreground="White" />
            <TextBox Name="txtUsername" Background="DarkSlateGray" Foreground="White" FontSize="18" />
            <Label Content="Password" Foreground="White" />
            <PasswordBox Name="txtPassword" Background="DarkSlateGray" Foreground="White" FontSize="18" />
            <Button Name="btnSubmit" Content="Submit" Margin="60 10" Background="DarkSlateGray" Foreground="White" FontSize="18" Click="btnSubmit_Click" />
            <TextBlock TextWrapping="Wrap" Name="teksti" Text="TextBlock" Height="123"/>
        </StackPanel>
    </Border>
</Window>
