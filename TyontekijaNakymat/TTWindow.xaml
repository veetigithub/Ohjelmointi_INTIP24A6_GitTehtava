<Window x:Class="Varasto.TyontekijaNakymat.TTWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Varasto"
        mc:Ignorable="d"
        Title="Työntekijä" Height="450" Width="800">
    <Grid>
        <Label Content="Keräily" HorizontalAlignment="Left" Margin="80,44,0,0" VerticalAlignment="Top"/>
        <Rectangle Name="kerailyBtn" MouseLeftButtonDown="Nelio_Click" HorizontalAlignment="Left" Height="175" Margin="80,70,0,0" Stroke="Black" VerticalAlignment="Top" Width="265" Fill="#FFD3EDEB"/>
        <Label Content="Hyllytys" HorizontalAlignment="Left" Margin="455,44,0,0" VerticalAlignment="Top"/>
        <Rectangle Name="hyllytysBtn" MouseLeftButtonDown="Nelio_Click" Height="175" Margin="0,70,80,0" Stroke="Black" VerticalAlignment="Top" HorizontalAlignment="Right" Width="265" Fill="#FFF3F5CA"/>
        <DataGrid x:Name="ProductsDataGrid" AutoGenerateColumns="True" Margin="10,251,10,10" IsReadOnly="True"/>
        <Label Content="Päivitä" HorizontalAlignment="Left" Margin="370,195,0,0" VerticalAlignment="Top" Height="20" FontSize="9" Width="43"/>
        <Rectangle Name="TTWindowReload" MouseLeftButtonDown="Nelio_Click" Height="30" Stroke="Black" VerticalAlignment="Top" HorizontalAlignment="Center" Width="60" Fill="#FF95CC82" Margin="0,215,0,0"/>

    </Grid>
</Window>
